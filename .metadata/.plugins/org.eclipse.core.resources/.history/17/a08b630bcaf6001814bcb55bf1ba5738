		String configLocation = "classpath:applictionCTX.xml";
		AbstractApplicationContext ctx = new GenericXmlApplicationContext(configLocation);
		Calculator myCalculator =ctx.getBean("myCalculator", Calculator.class);
		
		myCalculator.add();
		myCalculator.sub();
		myCalculator.mul();
		myCalculator.div();
		
		
	}

}
